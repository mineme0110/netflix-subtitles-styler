{
  "name": "Netflix subtitles styler",
  "version": "1.0",
  "description": "Netflix subtitles styler",
  "author": "twistezo",
  "homepage_url": "https://twistezo.github.io/portfolio/",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "declarativeContent",
    "https://*.netflix.com/"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": "logo.png"
  },
  "manifest_version": 2
}
